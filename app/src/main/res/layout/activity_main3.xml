        android:background="#00ff00" />

    <TextView
        android:id="@+id/six"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="代码设置六位背景颜色"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/eight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="代码设置八位背景颜色"
        android:textSize="18sp" />
</LinearLayout>